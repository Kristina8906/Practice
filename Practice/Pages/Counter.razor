@page "/counter"

<PageTitle>Calculator</PageTitle>
<p>First Number</p>
<input inputCode="numeric" @bind-value = "firstNumber"/>
<p>Second Number </p>
<input inputCode="numeric" @bind-value = "secondNumber"/>
<button @onclick="Sum">Sum</button>
<button @onclick="Subtract">Subtract</button>
<button @onclick="Multiply">Multiply</button>
<button @onclick="Split">Split</button>

<h2>@result</h2>


<h1 style="color:red"> @errorMessage </h1>
@code {
    private string firstNumber { get; set;} = "111";
    private string secondNumber { get; set;} = "222";

    private int result { get; set; }  = 0;


    private void Sum()
    {
        var firstNumberResult = 0;
        var secondNumberResult = 0;
        if (int.TryParse(firstNumber, out firstNumberResult) &
        int.TryParse(secondNumber, out secondNumberResult))
        {
            result = firstNumberResult + secondNumberResult;
            errorMessage = "";
        }
        else
        {
            errorMessage = "error";
        }
    }
    private void Subtract()
    {
        var firstNumberResult = 0;
        var secondNumberResult = 0;
        if (int.TryParse(firstNumber, out firstNumberResult) &
        int.TryParse(secondNumber, out secondNumberResult))
        {
            result = firstNumberResult - secondNumberResult;
            errorMessage = "";
        }
        else
        {
            errorMessage = "error";
        }
    }
     private void Multiply()
    {
        var firstNumberResult = 0;
        var secondNumberResult = 0;
        if (int.TryParse(firstNumber, out firstNumberResult) &
        int.TryParse(secondNumber, out secondNumberResult))
        {
            result = firstNumberResult * secondNumberResult;
            errorMessage = "";
        }
        else
        {
            errorMessage = "error";
        }
    }
     private void Split()
    {
        var firstNumberResult = 0;
        var secondNumberResult = 0;
        if (int.TryParse(firstNumber, out firstNumberResult) &
        int.TryParse(secondNumber, out secondNumberResult))
        {
            result = firstNumberResult / secondNumberResult;
            errorMessage = "";
        }
        else
        {
            errorMessage = "error";
        }
    }

    private string errorMessage { get; set; } = "error";
}

